{
  "name": "3DG+",
  "description": "Peque침a extensi칩n para la versi칩n m칩vil de foros.3dgames.com.ar",
  "version": "7",
  "manifest_version": 3,
  
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules/rules_1.json"
    }]
  },
  
  "content_scripts": [
  {
    "matches": ["*://foros.3dgames.com.ar/*", "*://profiles.3dgames.com.ar/*"],
    "css": ["css/content.css"],
    "run_at": "document_start"
    },
	{
    "matches": ["*://foros.3dgames.com.ar/*"],
    "js": ["js/content.js"],
		"all_frames": true,
    "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [ "js/jquery.mobile-1.original.mod.js", "js/vbulletin.mobile.original.mod.js" ],
      "matches": [ "*://foros.3dgames.com.ar/*" ]
    }
  ],

  "permissions": ["declarativeNetRequestWithHostAccess"],
  "host_permissions": ["*://*.3dgames.com.ar/*"],

  "icons": {
    "24": "/icons/24.png",
    "36": "/icons/36.png",
    "48": "/icons/48.png"
  }
}
